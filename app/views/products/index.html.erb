<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="container-fluid container-products">
  <div class="row">
    <% cache(cache_key_for_products) do %>
      <%= render @products %>
    <% end %>
  </div>
  <br>

  <% if current_user && current_user.admin? %>
  		<button><%= link_to 'New Product', new_product_path %></button>
  <% end %>

</div>

<article class="container">
  <div class="show">
    <p id="notice"><%= notice %></p>
    <div class="row">
    <div class="col-sm-9 col-md-9">
    <p>
      <%= image_tag(@product.image_url, class: "img-responsive") %>
    </p>
    </div>
      <div class="col-sm-3 col-md-3">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>

      <p>Average Rating:
        <div class="rated" data-score="<%= @product.average_rating %>">
        </div>
      </p>

      <p class="description">
       <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <p>
        <strong>Colour:</strong>
        <%= @product.colour %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @product.price %>
      </p>

      <p>
        <%= @product.highest_rating_comment  %>
      </p>

      <p>
        <%= @product.lowest_rating_comment  %>
      </p>

      <p>
        <strong>Colour:</strong>
        <%= @product.colour %>
      </p>

      <%= render 'new_comment' %>

      <%= render 'comments' %>

      <%= will_paginate @comments %>
      
    </div>
  </div>

<%= link_to 'Edit', edit_product_path(@product) %>
|
<%= link_to 'Back', products_path %>
</div>
</article>

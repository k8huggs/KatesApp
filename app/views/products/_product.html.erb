<!-- < % @products.each do |product| % > -->

<% cache product do %>

<div class="col-sm-4 col-md-4">
  <div class="one-prod">
    <h3>
      <%= product.name %>
    </h3>

    <h4>
      <%= image_tag(product.image_url, class: "img-responsive") unless product.image_url.blank? %>
      <p>
        <%= product.description %>
      </p>
      <p>
        Id: #<%= product.id %>
      </p>
      <p>
        Colour : <%= product.colour %>
      </p>
      <!--
      <p>
        <%= product.created_at %>
      </p>
      -->
      <p>
        $ <%= product.price %>
      </p>
    </h4>

    <%= link_to 'Show', product , class: "btn btn-default" %>

    <% if current_user && current_user.admin? %>
  		<button><%= link_to 'Edit', edit_product_path(product) %></button>
  		<button class="btn-warning"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></button>
  	<% end %>

  </div>
</div><!-- /col -->

<% end %>
